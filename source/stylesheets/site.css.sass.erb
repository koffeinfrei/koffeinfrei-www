$screen-xs: 480px

$spacing: 60px
$spacing-medium: $spacing / 2
$spacing-small: $spacing / 4
$spacing-tiny: $spacing / 6

$font-size-large: 20px
$font-size-medium: 16px
$font-size-small: 14px

$color-text-1: #000
$color-text-2: rgba($color-text-1, 0.7)
$color-text-3: rgba($color-text-1, 0.5)

@font-face
  font-family: 'Bespoke-c90qhHYNza'
  src: font-url('Bespoke-c90qhHYNza.eot')
  src: font-url('Bespoke-c90qhHYNza.eot?#iefix') format('embedded-opentype'), font-url('Bespoke-c90qhHYNza.woff') format('woff'), font-url('Bespoke-c90qhHYNza.ttf') format('truetype'), font-url('Bespoke-c90qhHYNza.svg#Bespoke-c90qhHYNza') format('svg')

//
// stock elements
//

body
  font-family: 'Bespoke-c90qhHYNza'
  line-height: 1.7
  padding: $spacing $spacing-small

  @media (min-width: $screen-xs)
    padding: $spacing 0

header
  text-align: center

h1
  font-size: $font-size-large
  margin: 0 0 $spacing 0
  position: relative

h2
  font-size: $font-size-medium
  // h2 needs top margin since it's used inside running text
  margin: $spacing-medium 0

pre
  // overwrite prism styling
  margin: 0 0 $spacing-small 0 !important

.content-container
  max-width: 860px
  margin: auto
  color: $color-text-1
  font-size: $font-size-medium

a
  color: $color-text-2

  &:focus,
  &:hover
    color: $color-text-3

ul
  &.blank
    margin: 0
    padding: 0

    li
      list-style: none

blockquote
  color: $color-text-3
  margin: 0
  padding: $spacing-tiny 0 $spacing-tiny $spacing-medium
  border-left: 2px solid rgba($color-text-1, 0.2)
  font-style: oblique

  &.simple-format
    white-space: pre-wrap

  p
    margin: 0

p
  margin: 0 0 $spacing-small 0

//
// overall
//

.content
  margin: 0 0 $spacing 0
  text-align: justify

.h1-text
  margin: 0 0 0 $font-size-large + $spacing-tiny
  padding: 0 $font-size-large + $spacing-tiny 0 0

.h1-back
  display: block
  color: $color-text-1

  @media (min-width: $screen-xs)
    position: absolute
    left: 0

  svg
    height: $font-size-large
    width: $font-size-large

//
// header
//

.avatar
  border-radius: 50%

.headline
  color: $color-text-2
  margin: 0 0 $spacing 0

//
// footer
//

ul.footer-items
  display: flex
  justify-content: center
  flex-wrap: wrap
  font-size: $font-size-small
  margin: 0 0 $spacing-medium 0

li.footer-item
  display: inline
  margin: 0 $spacing-medium

.footer-item-link
  display: flex

.footer-item-link-logo
  align-self: center
  margin: 0 $spacing-small 0 0
  opacity: 0.7

  svg
    height: 30px

.footer-item-link-text
  align-self: center

.copyright
  font-size: $font-size-small
  text-align: center

//
// animations
//

.animated
  animation-duration: 1s
  animation-fill-mode: both

  &.sequentially
    // currently the number of blog posts is the upper limit. this may change
    // in the future
    @for $i from 1 through <%= page_articles.count %>
      &:nth-child(#{$i})
        animation-delay: .1s + ($i / 30)

@keyframes fadeInUp
  from
    opacity: 0
    transform: translate3d(0, 100%, 0)

  to
    opacity: 1
    transform: none

.fade-in-up
  animation-name: fadeInUp
  animation-duration: 0.2s

@keyframes fadeIn
  from
    opacity: 0

  to
    opacity: 1

.fade-in
  animation-name: fadeIn

//
// articles
//

li.article-link
  display: flex
  justify-content: space-between
  flex-wrap: wrap

  @media (min-width: $screen-xs)
    flex-wrap: nowrap

.article-link-title
  max-with: 100%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  word-wrap: normal
  @media (min-width: $screen-xs)
    margin-right: $spacing-medium

a.article-link-title-link
  color: #216f1a
  text-decoration: none

  &:focus,
  &:hover
    text-decoration: underline

.article-link-date
  white-space: nowrap
  color: $color-text-2
  font-size: $font-size-small
  margin: 0 0 $spacing-small

  @media (min-width: $screen-xs)
    font-size: $font-size-medium

.article-date
  white-space: nowrap
  color: $color-text-2
  font-size: $font-size-medium
  margin: 0 0 $spacing-tiny 0
