doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta http-equiv="x-ua-compatible" content="ie=edge"
    meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"


    link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"
    link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"
    link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"
    link rel="manifest" href="/site.webmanifest"
    meta name="msapplication-TileColor" content="#da532c"
    meta name="theme-color" content="#ffffff"
    meta name="description" content="Personal blog of software developer Alexis Reigel containing posts about stuff. Free software, web technologies and heavy metal coding (and ruby of course)."

    = feed_tag :atom, "#{blog.options.prefix.to_s}/posts.atom", title: 'Atom Feed'
    title
      = yield_content :before_title
      | Koffeinfrei | Alexis Reigel

    = stylesheet_link_tag 'normalize'
    = stylesheet_link_tag 'site'
    = stylesheet_link_tag 'prism'
    = javascript_include_tag 'site'
    = javascript_include_tag 'prism'

    = partial 'piwik'
  body
    .theme-switcher
      .theme-switcher-light
        = inline_svg 'sun'
      .theme-switcher-dark
        = inline_svg 'moon'

    header.animated.fade-in
      .content-container
        = link_to '/' do
          img.avatar alt='Homepage' src='https://www.gravatar.com/avatar/8342950f34a66d9ec7cfe10b33d5494c?s=100'

        .headline free software, web technologies and heavy metal coding (and ruby of course)

        h1
          = yield_content :before_page_title
          .h1-text= current_page.data.title

    .content.animated.fade-in
      .content-container
        = yield

    .content
      .content-container
        blockquote.simple-format.js-random-quote
          = inline_svg 'loading'

    footer.animated.fade-in
      .content-container
        ul.blank.footer-items
          = partial 'footer-item', locals: { link: 'https://gitlab.com/koffeinfrei', text: 'GitLab', svg: 'gitlab-logo' }
          = partial 'footer-item', locals: { link: 'https://github.com/koffeinfrei', text: 'GitHub', svg: 'github-logo' }
          = partial 'footer-item', locals: { link: 'https://mastodon.social/@koffeinfrei', text: 'Mastodon', svg: 'mastodon-logo', link_attributes: { rel: "me" } }
          = partial 'footer-item', locals: { link: 'https://twitter.com/alexisreigel', text: 'Twitter', svg: 'twitter-logo' }
          = partial 'footer-item', locals: { link: 'https://www.linkedin.com/in/alexis-reigel/', text: 'LinkedIn', svg: 'linkedin-logo' }

        .copyright
          | &copy; Copyright by Alexis Reigel #{DateTime.current.year}
